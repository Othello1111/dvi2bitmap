# part of dvi2bitmap
# $Id$

CXX=@CXX@
CXXFLAGS=-Wall @CXXFLAGS@
DEFS=@DEFS@
LIBS=-lm @LIBS@
GIF_OBJ=@GIFOBJ@
KPATHSEA_OBJ=@KPATHSEAOBJ@

EXEC=dvi2bitmap
OBJS=dvi2bitmap.o DviFile.o InputByteStream.o PkFont.o Bitmap.o \
	BitmapImage.o XBMBitmap.o PageRange.o $(GIF_OBJ) $(KPATHSEA_OBJ)

# Add a suffix rule for stupid makes (hello, Tru64...)
.SUFFIXES: .o .cc
.cc.o:
	$(CXX) $(CXXFLAGS) $(DEFS) -c $<

$(EXEC): $(OBJS)
	$(CXX) $(OBJS) $(LIBS) -o $@

DviFile.o: DviFile.cc DviFile.h InputByteStream.h PkFont.h verbosity.h

InputByteStream.o: InputByteStream.cc InputByteStream.h dvi2bitmap.h \
		verbosity.h config.h

dvi2bitmap.o: dvi2bitmap.cc dvi2bitmap.h DviFile.h PkFont.h Bitmap.h \
		version.h verbosity.h config.h

PkFont.o: PkFont.cc PkFont.h InputByteStream.h dvi2bitmap.h kpathsea.h \
		verbosity.h config.h

BitmapImage.o: BitmapImage.cc BitmapImage.h GIFBitmap.h XBMBitmap.h config.h

Bitmap.o: Bitmap.cc Bitmap.h dvi2bitmap.h BitmapImage.h verbosity.h config.h

GIFBitmap.o: GIFBitmap.cc GIFBitmap.h Bitmap.h config.h

XBMBitmap.o: XBMBitmap.cc XBMBitmap.h Bitmap.h config.h

kpathsea.o: kpathsea.cc kpathsea.h verbosity.h config.h

PageRange.o: PageRange.cc PageRange.h verbosity.h config.h


# Distribution
configure: config/configure.in
	autoconf config/configure.in >configure
	chmod 755 configure

dvi2bitmap.mantext: dvi2bitmap.1
	nroff -man dvi2bitmap.1 >dvi2bitmap.mantext

dvi2bitmap.tar: configure dvi2bitmap.mantext 
	rm -f Manifest
	cd doc; $(MAKE) doc.tar
	mv doc/doc.tar .
	for i in *.cc *.h Makefile.in config.h.in README \
			configure config/config* config/install-sh \
			dvi2bitmap.1 dvi2bitmap.mantext LICENCE doc.tar; do \
		echo dvi2bitmap/$$i >>Manifest; \
	done
	echo dvi2bitmap/Manifest >>Manifest
	cd ..; tar cf dvi2bitmap.tar `cat dvi2bitmap/Manifest`
	rm -f Manifest
	mv ../dvi2bitmap.tar .

# Housekeeping targets
tidy:
	rm -f *~ config/*~

clean: tidy
	rm -f *.o $(EXEC)
	rm -f doc.tar dvi2bitmap.mantext
	rm -f dvi2bitmap.tar.Z dvi2bitmap_source.tar
	cd doc; $(MAKE) clean
